<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Menu"
    android:layout_gravity="center_horizontal"
    >

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="100sp"
     android:orientation="horizontal"
     android:gravity="center_horizontal"
     android:weightSum="1"
     >

     <ImageButton
         android:id="@+id/btn_menu_1"
         style="@style/botones"
         android:layout_width="100sp"
         android:layout_height="100sp"
         android:background="#BED7EE"
         android:src="@drawable/img_menu_1" />

     <ImageButton
         android:id="@+id/btn_menu_2"
         style="@style/botones"
         android:layout_width="100sp"
         android:layout_height="100sp"
         android:background="#BED7EE"
         android:src="@drawable/img_menu_2" />

     <ImageButton
         android:id="@+id/btn_menu_3"
         style="@style/botones"
         android:layout_width="100sp"
         android:layout_height="100sp"
         android:background="#BED7EE"
         android:src="@drawable/img_menu_3" />

     <ImageButton
         android:id="@+id/btn_menu_4"
         style="@style/botones"
         android:layout_width="100sp"
         android:layout_height="100sp"
         android:background="#BED7EE"
         android:src="@drawable/img_menu_4" />

 </LinearLayout>






</FrameLayout>